<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/maillot" />
        <TextView
                android:id="@+id/tv_numero_layout_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="01"
                android:textColor="#fff"
                android:textSize="40dp" />
    </RelativeLayout>
    <TextView
            android:id="@+id/tv_nom_prenom_layout_player"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="30"
            android:gravity="center"
            android:text="Nom, prenom"
            android:textSize="30dp" />
    <Button
            android:id="@+id/btn_update_layout_player"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:text="update" />
    <Button
            android:id="@+id/btn_delete_layout_player"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:text="X" />
</LinearLayout>